<div class="new-photo-galeries">
     <%=form_with model:@galery, local:true do |f|%>
       <div class="container-subtitle-image">
       <br>
        <%=f.label :subtitulo%>
        <br>
        <%=f.text_field(:subtitulo) %>
        <br>
       </div>
       <br>
       <div class="container-galery-image-new">
            <%=f.file_field(:image)%>
            <div style="    
            margin: 4%;
            padding-left: 22%;
            height: 135px;
            padding-top: 14%;
            padding-bottom: 8%;
            padding-right: 24%;
            background: #FFFFFF;
            box-shadow: 0px 1px 3px rgba(63, 63, 68, 0.15), 0px 0px 0px rgba(63, 63, 68, 0.05);
            border-radius: 5px;">
            <%= image_tag 'message.png' %>
            </div>
        </div>

         <hr>

        <div style="
            margin-left: 90%;
            width: 13%;
            position: absolute;
            margin-top: 9%;">
        <%=f.submit 'Guardar', :class =>'save' %>
        </div>
     <%end%>
</div>