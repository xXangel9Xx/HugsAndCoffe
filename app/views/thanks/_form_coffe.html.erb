      <p class="type-date">Entidad: <span class="dates">Paypal</span></p>
      <p class="type-date">Email:<span class="dates">xyz@</span></p>
      <p>..</p>
      </div>
      <div class="container_date_person">      
       <p class="type-date">Nombre</p>
       <br>
       <%=f.text_field(:name, :class=>"input-thank" )%>
       <br>
       <br>
       <p class="type-date">Ocupación</p>
       <br>
       <%=f.text_field(:ocupacion, :class=>"input-thank")%>
       <br>
       <br>
       <p class="type-date">Mensaje de agradecimiento</p>
       <br>
       <%=f.text_field(:message, :class=>"input-thank-message") %>
      </div>
      <br>
       <div class="width_save">
        <%=f.submit 'Guardar', :class =>'save' %>
       </div>
      <%end%>

   </div>
